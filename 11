import os
import webbrowser
import telebot

TOKEN = os.getenv("BOT_TOKEN")

bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=["profile"])
def site(message):
	webbrowser.open("https://github.com/TikhonPaliuh")

@bot.message_handler(commands=["start"])
def main(message):
	bot.send_message(message.chat.id, "home page")

@bot.message_handler()
def info(message):
	bot.send_message(message.chat.id, f"hi {message.from_user.first_name}, this bot was created for practice, I'm glad you looked at it :) ")
		
 
bot.polling(none_stop=True)
